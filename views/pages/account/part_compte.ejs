<div class="card mt-5">
    <div class="card-body">
        <h5 class="card-title black-color">Gérer mon compte <span class="edit-btn">Edit</span></h5>
        <div class="view">
            <p><%= myData.first_name %> <%= myData.last_name %></p>
            <p><%= myData.mail %></p>
            <p><%= (myData.telephone) ? myData.telephone : 'Téléphone non spécifiée' %></p>
            <p><%= (myData.adress) ? myData.adress : 'Adresse non spécifiée' %></p>
            <p><%= (myData.birdthay) ? myData.birdthay : 'Date de naissance non spécifiée' %></p>
        </div>

        <div class="edit hide">
            <form action="" method="post">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="first_name" name="first_name" class="form-control" required="" autofocus="">
                            <label for="first_name">Prénom</label>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="lastname" name="lastname" class="form-control" required="">
                            <label for="lastname">Nom</label>
                        </div>
                    </div>
                </div>
        
                <div class="form-label-group">
                    <input type="emai" id="mail" name="mail" class="form-control" required="">
                    <label for="mail">Adresse email</label>
                </div>
        
        
                <div class="form-label-group">
                    <input type="tel" id="telephone" name="telephone" class="form-control" required="">
                    <label for="telephone">Téléphone</label>
                </div>

                <div class="form-label-group">
                    <input type="text" id="adress" name="adress" class="form-control" required="">
                    <label for="adress">Adresse</label>
                </div>

                <div class="form-label-group">
                    <input type="date" id="birdthay" name="birdthay" class="form-control" required="">
                    <label for="birdthay">Date de naissance</label>
                </div>
        
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="save_compte_btn">Enregistrer</button>
            </form>
        </div>
    </div>
</div>