<div class="cst-card mt-5">
    <div class="card-body">
        <h5 class="card-title black-color d-flex justify-content-between">
            <span class="title">Mon mot de passe</span>
            <span class="edit-btn"><i class="far fa-edit"></i></span>
        </h5>
        <div class="view">
            <div class="form-label-group">
                <input type="password" class="form-control" required="" value="<%= myData.password %>">
                <label for="mail">Mot de passe</label>
            </div>
        </div>

        <div class="edit hide">
            <form action="" method="post">
        
                <div class="form-label-group">
                    <input type="password" id="password" name="password" class="form-control" required="">
                    <label for="password">Mot de passe</label>
                </div>
        
                <div class="form-label-group">
                    <input type="password" id="confirm_password" name="confirm_password" class="form-control" required="">
                    <label for="confirm_password">Confirmer le mot de passe</label>
                </div>
        
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary btn-block" type="submit" name="save_pass_btn">Enregistrer</button>
                    </div>
                    <div class="col-6">
                        <a href="" class="btn btn-dark btn-block" class="cancel-edit-btn">Annuler</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>