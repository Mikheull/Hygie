<div class="cst-card mt-5" id="general">
    <div class="card-body">
        <h5 class="card-title black-color d-flex justify-content-between">
            <span class="title">Général</span>
            <span class="edit-btn"><i class="far fa-edit"></i></span>
        </h5>
        <div class="view">
            <p><span class="mr-2 font-weight-bolder">Sexe : </span> <%= (myData.gender || myData.gender == 0) ? (myData.gender == 1) ? 'Homme' : 'Femme' : 'non spécifié' %></p>
            <p><span class="mr-2 font-weight-bolder">Taille : </span> <%= (myData.height) ? myData.height : 'non spécifiée' %></p>
            <p><span class="mr-2 font-weight-bolder">Poids : </span> <%= (myData.weight) ? myData.weight : 'non spécifié' %></p>
            <p><span class="mr-2 font-weight-bolder">Groupe sanguin : </span> <%= (myData.blood_group) ? myData.blood_group : 'non spécifié' %></p>
        </div>

        <div class="edit hide">
            <form action="" method="post">

                <div class="form-group">
                    <label for="gender">Sexe</label>
                    <select class="form-control" name="gender" id="gender">
                        <option value="">Choisir son sexe</option>
                        <option value="0">Femme</option>
                        <option value="1">Homme</option>
                    </select>
                </div>

                <div class="form-label-group">
                    <input type="number" id="height" name="height" class="form-control" value="<%= myData.height %>">
                    <label for="height">Taille</label>
                </div>

                <div class="form-label-group">
                    <input type="number" id="weight" name="weight" class="form-control" value="<%= myData.weight %>">
                    <label for="weight">Poids</label>
                </div>

                <div class="form-group">
                    <label for="blood_group">Groupe sanguin</label>
                    <select class="form-control" name="blood_group" id="blood_group">
                        <option value="">Choisir un groupe sanguin</option>
                        <option value="a+">A+</option>
                        <option value="a-">A-</option>
                        <option value="b+">B+</option>
                        <option value="b-">B-</option>
                        <option value="ab+">AB+</option>
                        <option value="ab-">AB-</option>
                        <option value="o+">O+</option>
                        <option value="o-">O-</option>
                    </select>
                </div>
        
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary btn-block" type="submit" name="save_general_btn">Enregistrer</button>
                    </div>
                    <div class="col-6">
                        <a href="" class="btn btn-dark btn-block" class="cancel-edit-btn">Annuler</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>